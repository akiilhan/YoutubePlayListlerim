<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:srcCompat="@drawable/aslan"
            android:id="@+id/imgburcsembol"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvburcadi"
            app:layout_constraintStart_toEndOf="@+id/imgburcsembol"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:textStyle="bold"
            android:textSize="24sp"
            android:fontFamily="@font/actor"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvburctarih" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvburcadi" app:layout_constraintStart_toEndOf="@+id/imgburcsembol"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textStyle="bold|italic" android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/imgburcsembol" android:fontFamily="@font/actor"
            android:layout_marginStart="8dp"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="89dp" android:id="@+id/guideline"/>

    <View android:layout_width="match_parent"
          android:layout_height="2dp"
          android:background="#2fbbb0"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginTop="8dp"
          app:layout_constraintTop_toBottomOf="@+id/imgburcsembol">

    </View>
</androidx.constraintlayout.widget.ConstraintLayout>